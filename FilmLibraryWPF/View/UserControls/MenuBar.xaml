<UserControl x:Class="FilmLibraryWPF.View.UserControls.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FilmLibraryWPF.View.UserControls"
             mc:Ignorable="d" 
             Height="70" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <Menu>
            <MenuItem Header="File" FontSize="16">
                <MenuItem Header="Open" />
                <MenuItem Header="Save" Click="MenuItem_Click_2" />
                <MenuItem Header="Exit" Click="MenuItem_Click" />
                <MenuItem Header="File" Click="MenuItem_Click_1" />
                
                
            </MenuItem>
            <MenuItem Header="Edit" FontSize="16" />
            <MenuItem Header="Help" FontSize="16">
                <MenuItem Header="About" FontSize="16" Click="MenuItem_Click_3" />
            </MenuItem>
        </Menu>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Button Width="50" Margin="5"/>
            <TextBlock Width="150" Grid.Column="1" Margin="5"/>
        </Grid>
    </Grid>
</UserControl>

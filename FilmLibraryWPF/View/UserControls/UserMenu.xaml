<UserControl
    x:Class="FilmLibraryWPF.View.UserControls.UserMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FilmLibraryWPF.View.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="350"
    d:DesignWidth="200"
    mc:Ignorable="d"
    Visibility="Hidden">

    <Grid
        x:Name="userMenuGrid"
        Width="200"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Background="Black"
        Visibility="Visible" >
        <Grid.Effect>
            <BlurEffect x:Name="blurEffect" Radius="0" />
        </Grid.Effect>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>

        <Button x:Name="profileBtn"
            Grid.Row="0"
            Grid.Column="1"
            Width="200"
            Height="40"
            Margin="0,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Left"
            Background="Black"
            BorderBrush="Transparent"
            Content="Profile"
            FontSize="16"
            Foreground="White" 
            Click="profileBtn_Click"/>

        <Button
            Grid.Row="1"
            Grid.Column="1"
            Width="200"
            Height="40"
            Margin="0,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Left"
            Background="Black"
            BorderBrush="Transparent"
            Content="Favourites"
            FontSize="16"
            Foreground="White" />

        <Button
            Grid.Row="2"
            Grid.Column="1"
            Width="200"
            Height="40"
            Margin="0,0,0,0"
            VerticalAlignment="Bottom"
            HorizontalContentAlignment="Left"
            Background="Black"
            BorderBrush="Transparent"
            Content="Watch later"
            FontSize="16"
            Foreground="White" />

        <Button
            Grid.Row="3"
            Grid.Column="1"
            Width="200"
            Height="40"
            Margin="0,0,0,0"
            VerticalAlignment="Bottom"
            HorizontalContentAlignment="Left"
            Background="Black"
            BorderBrush="Transparent"
            Content="Recommend"
            FontSize="16"
            Foreground="White" />

        <Button
            Grid.Row="4"
            Grid.Column="1"
            Width="200"
            Height="40"
            Margin="0,0,0,0"
            VerticalAlignment="Bottom"
            HorizontalContentAlignment="Left"
            Background="Black"
            BorderBrush="Transparent"
            Content="Settings"
            FontSize="16"
            Foreground="White" />

        <Button
            Grid.Row="5"
            Grid.Column="1"
            Width="200"
            Height="40"
            Margin="0,0,0,0"
            VerticalAlignment="Bottom"
            HorizontalContentAlignment="Left"
            Background="Black"
            BorderBrush="Transparent"
            Content="Log out"
            FontSize="16"
            Foreground="White" />

